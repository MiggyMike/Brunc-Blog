    .headshot {
      position: relative;
      width: 50%;
      }

    div.headshot {
      float:left;
      width: 29%;
      background-color: white;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
      margin: 2%;
    }

    div.container, p {
      text-align: center;
      padding: 10px 20px;
    }

    .overlay {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      height: 100%;
      width: 100%;
      opacity: 0;
      transition: .25s ease;
      background-color: #008CBA;
    }

    .headshot:hover .overlay {
      opacity: 1;
    }
    .overlay p {
      color: white;
      text-align: justify;
    }
