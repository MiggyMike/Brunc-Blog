<%= render 'shared/errors', obj: @category %>

  <%= form_for @category do |f|%>
  <div class="form-group row">
    <div class="control-label right col-sm-2 my-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
  <div class="center">
    <small class="danger-link"><%= link_to "Cancel request and return to articles listing", articles_path%> </small>

  </div>
