<section class="container mt-5">

  <h1 class="center">Listing All Categories</h1>
  <%= content_tag(:div, will_paginate, class: 'pagination pagination-sm justify-content-center') %>
  <div class="center">
    <% @categories.each do |category| %>
    <ul class="listing">
      <div class="card col-sm-8 offset-sm-2">
        <div class="card-body">
          <div class="card-title article-title">
            <li class="card_title">
              <%= link_to "#{category.name}", category_path(category) %>
            </li>
            <li><small> <%= pluralize(category.articles.count, "article")%> </small></li>
          </div>
        </div>
      </div>
    </ul>
    <% end %>
    <%= content_tag(:div, will_paginate, class: 'pagination pagination-sm justify-content-center') %>
  </div>

</section>
